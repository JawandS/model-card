{
  "$id": "https://example.org/modelcard.schema.json",
  "title": "Healthcare Model Card",
  "type": "object",
  "required": ["name", "model_version", "owner", "intended_use", "data", "evaluation"],
  "properties": {
    "name": { "type": "string" },
    "model_version": { "type": "string" },
    "owner": {
      "type": "object",
      "required": ["organization"],
      "properties": {
        "organization": { "type": "string" },
        "contact": { "type": "string", "format": "email" }
      }
    },
    "intended_use": {
      "type": "object",
      "required": ["summary", "clinical_context"],
      "properties": {
        "summary": { "type": "string" },
        "clinical_context": { "type": "string", "enum": ["screening","triage","diagnosis","monitoring","administrative"] },
        "care_setting": { "type": "string", "enum": ["inpatient","outpatient","ed","telehealth","other"] },
        "contraindications": { "type": "string" }
      }
    },
    "data": {
      "type": "object",
      "required": ["source","time_window"],
      "properties": {
        "source": { "type": "string", "enum": ["claims","ehr","registry","imaging","wearables","other"] },
        "time_window": { "type": "string" },
        "geography": { "type": "string" },
        "codesets": { "type": "array", "items": { "type": "string" } },
        "representativeness": {
          "type": "object",
          "properties": {
            "population_frame": { "type": "string" },
            "payer_mix": { "type": "string" },   
            "age_distribution": { "type": "string" },
            "sex_distribution": { "type": "string" },
            "race_ethnicity_notes": { "type": "string" },
            "missingness": { "type": "string" }
          }
        }
      }
    },
    "evaluation": {
      "type": "object",
      "required": ["overall_metrics"],
      "properties": {
        "overall_metrics": { "type": "string" },       
        "subgroup_analysis": { "type": "string" },
        "external_validation": { "type": "string" },
        "limitations": { "type": "string" }
      }
    },
    "risk_management": {
      "type": "object",
      "properties": {
        "failure_modes": { "type": "string" },
        "human_oversight": { "type": "string" },
        "monitoring_plan": { "type": "string" }
      }
    },
    "provenance": {
      "type": "object",
      "properties": {
        "created_at": { "type": "string", "format": "date" },
        "created_by": { "type": "string" },
        "dataset_id": { "type": "string" },
        "artifact_hash": { "type": "string" }
      }
    }
  }
}
